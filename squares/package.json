{
  "name": "squares",
  "version": "0.1.0",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "concurrently 'yarn:lint:*'",
    "lint:eslint": "eslint '**/*.{ts,js}'",
    "lint:prettier": "prettier --check '**/*.{ts,js,json,md,yml}'",
    "lint:styles": "stylelint --ignore-path ../.eslintignore '**/*scss'",
    "fix": "concurrently 'yarn:fix:*'",
    "fix:eslint": "eslint --fix '**/*.{ts,js}'",
    "fix:prettier": "prettier --write '**/*.{ts,js,json,md,yml}'",
    "fix:styles": "stylelint --fix --ignore-path ../.eslintignore '**/*scss'"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "eslint": "^8.1.0",
    "prettier": "^2.4.1",
    "sass": "^1.43.4",
    "stylelint": "^14.0.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^6.0.0",
    "stylelint-config-sass-guidelines": "^9.0.0",
    "stylelint-scss": "^4.0.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.13"
  }
}
