{
  "name": "pixelate",
  "version": "0.1.2",
  "license": "UNLICENSED",
  "scripts": {
    "dev": "vite --host 0.0.0.0",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "concurrently 'yarn:lint:*'",
    "lint:eslint": "eslint '**/*.{ts,js}'",
    "lint:prettier": "prettier --check '**/*.{ts,js,json,md,yml}'",
    "lint:styles": "stylelint --ignore-path ../.eslintignore '**/*scss'",
    "fix": "concurrently 'yarn:fix:*'",
    "fix:eslint": "eslint --fix '**/*.{ts,js}'",
    "fix:prettier": "prettier --write '**/*.{ts,js,json,md,yml}'",
    "fix:styles": "stylelint --fix --ignore-path ../.eslintignore '**/*scss'"
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "eslint": "^7.32.0",
    "prettier": "^2.3.2",
    "sass": "^1.37.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-scss": "^3.21.0",
    "typescript": "^4.3.2",
    "vite": "^2.4.4"
  }
}
