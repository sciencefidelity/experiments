{
  "plugins": [
    "stylelint-scss"
  ],
  "extends": [
    "stylelint-config-prettier",
    "stylelint-config-recommended",
    "stylelint-config-sass-guidelines"
  ],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": true,
    "rule-empty-line-before": ["always", { "except": [ "inside-block" ] } ],
    "selector-max-id": 1,
    "max-nesting-depth": 4
  }
}
